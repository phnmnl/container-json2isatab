<?xml version='1.0' encoding='UTF-8'?>
<tool id="json2isatab" name="json2isatab" version="1.0">
  <description>Converts an ISA-JSON file to an ISA-Tab ZIP archive</description>
  <command><![CDATA[
    run_json2tab.py $isa_file
  ]]>
  </command>
  <inputs>
      <param name="isa_file" type="data" format="json" label="ISA-JSON" optional="false"/>
  </inputs>
  <outputs>
    <data format="zip" name="output" from_work_dir="out.zip" label="ISA-Tab ZIP" />
  </outputs>

  <help>
      This tool converts an ISA-Tab ZIP archive to ISA-JSON.
  </help>

</tool>